#!/usr/bin/env sh

# Run this script to deploy the site. User pages should use master as
# the site branch, otherwise use gh-pages.
site_branch=master

# Exit if any subcommand fails.
set -e

echo "Started deploying"

# Checkout site branch.
if [ `git branch | grep $site_branch` ]
then
  git branch -D $site_branch
fi
git checkout -b $site_branch

# Build site.
bundle exec jekyll build

# Delete and move files.
find . -maxdepth 1 ! -name '_site' ! -name '.git' ! -name '.gitignore' -exec rm -rf {} \;
mv _site/* .
rm -R _site/

# Push to site branch.
git add -fA
git commit --allow-empty -m "$(git log -1 --pretty=%B) [ci skip]"
git push -f -q origin $site_branch

# Move back to previous branch.
git checkout -

echo "Deployed Successfully!"

exit 0
